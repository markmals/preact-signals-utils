{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "outDir": "dist"
    },
    "exclude": ["node_modules", "test"],
    "include": ["src/**/*", "playground/**/*"]
}
